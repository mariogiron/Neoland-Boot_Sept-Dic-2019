extends ../layout

block content
    h2.mb-5 Insertar nueva Persona
    form(action="/personas/update", method="POST")
        .form-group
            label Nombre
            input.form-control(name="nombre", type="text", value=pers.nombre)
        .form-group
            label Apellidos
            input.form-control(name="apellidos", type="text", value=pers.apellidos)
        .form-group
            label Edad
            input.form-control(name="edad", type="text", value=pers.edad)
        .form-group
            label Email
            input.form-control(name="email", type="text", value=pers.email)
        input(type="hidden", name="id", value=pers._id)
        input.btn.btn-info.btn-block(type="submit", value="Enviar")